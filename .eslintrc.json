{
    "parser": "babel-eslint",
    "plugins": [
        "react",
        "jsx-a11y"
    ],
    "extends": "airbnb",
    "rules": {
        "react/prefer-stateless-function": 0,
        "indent": [
          "error",
          4,
          {
            "SwitchCase": 1
          }
        ],
        "arrow-parens": [
          "error",
          "as-needed"
        ],
        "no-underscore-dangle": [
          "error",
          {
            "allow": [
              "_id"
            ]
          }
        ],
        "object-curly-spacing": [
          "error",
          "never"
        ],
        "import/no-extraneous-dependencies": [
          "off"
        ],
        "comma-dangle": [
          "error",
          "never"
        ],
        "max-len": [
          "error",
          120
        ],
        "react/jsx-tag-spacing": [
          "error",
          {
            "beforeSelfClosing": "never"
          }
        ],
        "react/jsx-indent": [
          "error",
          4
        ],
        "react/jsx-indent-props": [
          "error",
          4
        ],
        "react/jsx-filename-extension": [
          "warn",
          {
            "extensions": [
              ".js"
            ]
          }
        ]
      }
    
}